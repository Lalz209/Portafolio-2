---
import ExperienceIcon from "./Icons/ExperienceIcon.astro";

const experiences = [
  {
    etitle: "Freelance Web Developer",
    company: "Freelance",
    edate: "2024-Present",
    edescription:
      "Developed landing pages for clients with features like anti-robot security, email confirmations, and database integration. Improved user experience with filters and responsive design, while enhancing skills in web security, session management, and styling through self-driven projects.",
  },
];
---

<section id="experience-section">
  <div class="titles-container expt mb-10 text-txt flex justify-center items-center gap-3">
  <ExperienceIcon class="icons2"/>
<h2 id="experience" class="section-title  text-txt text-5xl text-center  font-bold">EXPERIENCE</h2>
</div>
<div class="experience" data-experience={JSON.stringify(experiences)}>
  <ol class="relative mt-16">
    {experiences.map((exp) => (
      <li class="">
        <div class="descriptionexp relative mx-12 pb-12 grid before:absolute before:left-[-35px] before:block before:h-full before:border-l-2 before:border-black/20 dark:before:border-txt/15 before:content-[''] md:grid-cols-5 md:gap-10 md:space-x-4 cv:before:hidden">
          <div class=" relative pb-12 md:col-span-2">
            <div class=" sticky top-0">
              <span class="line bg-spanLink h-5 w-5 -left-[45px] -top-[-30px] absolute rounded-full">
                
              </span>
              <h3 class="text-xl font-bold text-span">
                {exp.etitle}
              </h3>
              <h4 class="font-semibold text-xl text-txt">
                {exp.company}
              </h4>
              <time class="p-0 m-0 text-sm text-navbartxt">
                {exp.edate}
              </time>
            </div>
          </div>
          <div class="edescription relative flex flex-col gap-2 pb-4 text-txt md:col-span-3">
            {exp.edescription}
          </div>
        </div>
      </li>
    ))}
  </ol>
</div>
</section>