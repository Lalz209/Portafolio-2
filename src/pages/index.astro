---
import '../styles/global.css'; // Asegúrate de que la ruta sea correcta
const modoInicial = "web";
---

<div id="contenedor" class={modoInicial}>
  <h1 id="titulo" class="text-3xl font-bold text-black web-mode">
    Hola, bienvenido
  </h1>
  <p id="texto" class="web-mode">
    Este es un texto de ejemplo
  </p>
  <button class="mt-4 px-4 py-2 bg-blue-500 text-white rounded">
    Cambiar modo
  </button>
</div>

<script>
  const contenedor = document.getElementById("contenedor");
  const titulo = document.getElementById("titulo");
  const texto = document.getElementById("texto");
  const boton = document.querySelector("button");

  boton.addEventListener("click", () => {
    if (contenedor.classList.contains("web")) {
      contenedor.classList.remove("web");
      contenedor.classList.add("cv");
      titulo.classList.remove("web-mode");
      titulo.classList.add("cv-mode");
      texto.classList.remove("web-mode");
      texto.classList.add("cv-mode");
    } else {
      contenedor.classList.remove("cv");
      contenedor.classList.add("web");
      titulo.classList.remove("cv-mode");
      titulo.classList.add("web-mode");
      texto.classList.remove("cv-mode");
      texto.classList.add("web-mode");
    }
  });
</script>

<style>
  .web {
    background-color: #f0f0f0;
    padding: 2rem;
  }
  .cv {
    background-color: #ffffff;
    padding: 1rem;
    border: 1px solid #ccc;
  }
  .web-mode {
    color: #2563eb; /* Azul para modo web */
    padding: 1rem;
  }
  .cv-mode {
    color: #16a34a; /* Verde para modo CV */
    padding: 0.5rem;
  }
  .web-mode.text-3xl {
    font-size: 2rem; /* Tamaño diferente para h1 en modo web */
  }
  .cv-mode.text-3xl {
    font-size: 1.5rem; /* Tamaño diferente para h1 en modo CV */
  }
</style>